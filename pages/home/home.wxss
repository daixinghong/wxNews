/* pages/home/home.wxss */

.object_container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.date_container {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.head_image {
  margin-left: 10px;
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
}

.date_text {
  vertical-align: middle;
  margin-left: 20rpx;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  color: #333;
}

.title_text {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}

.content_image {
  width: 100%;
  height: 360rpx;
  margin-bottom: 10rpx;
}

.content_text {
  margin-top: 10rpx;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.nice_container {
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
}

.collection_image {
  height: 16px;
  width: 16px;
  margin-left: 8px;
  vertical-align: middle;
}

.collection_text {
  vertical-align: middle;
  font-size: 13px;
  line-height: 16px;
  margin-left: 8px;
}
.see_image{
  height: 16px;
  width: 16px;
  margin-left: 14px;
  vertical-align: middle;
}

.see_text{
  vertical-align: middle;
  font-size: 13px;
  line-height: 16px;
  margin-left: 8px;
}